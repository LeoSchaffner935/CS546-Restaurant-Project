<div id="userInfo">
    <h1>Welcome {{user.username}}!</h1>
    <p>First Name: {{user.firstName}}</p>
    <p>Last Name: {{user.lastName}}</p>
    <p>Email: {{user.email}}</p>
    <p>Bio: {{user.bio}}</p>

    <p>Edit Information</p>
    <form action="/users/{{user._id}}" method="POST">
        <label>Username
            <input id='username' name='username' placeholder="username" value="{{user.username}}">
        </label>
        <label>First Name
            <input id='firstName' name='firstName' placeholder="First Name" value="{{user.firstName}}">
        </label>
        <label>Last Name
            <input id='lastName' name='lastName' placeholder="Last Name" value="{{user.lastName}}">
        </label>
        <label>Email
            <input id='email' name='email' placeholder="Email" value="{{user.email}}">
        </label>
        <label>Password
            <input id='password' name='password' type="password" placeholder="Please fill in current or new password">
        </label>
        <label>Bio
            <input id='bio' name='bio' placeholder="Bio" value="{{user.bio}}">
        </label>
        <p>Choose from 'happy.jpg', 'angry.jpg', 'sad.jpg', or 'default.jpg'.</p>
        <label>Profile Picture
            <input id='profilePicture' name='profilePicture' placeholder="Profile Picture" value="{{user.profilePicture}}">
        </label>
        <input id="hiddenInput" name='hiddenInput' value='true' hidden>
        <button type="submit">Submit</button>
    </form>

    <a id='delete' src='/users/{{user._id}}'>Delete Account</a>
</div>
