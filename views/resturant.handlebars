<h3>{{restaurant.name}}</h3>
<dl id="restaurantInfo">
    <dt class="restElem">Location</dt>
    <dd>{{restaurant.location.address}}</dd>
    
    <dt class="restElem">Categories</dt>
    {{#each restaurant.categories}}
    <dd>{{this}}</dd>
    {{/each}}

    <dt class="restElem">Rating</dt>
    <dd>{{restaurant.rating}}</dd>

    <dt class="restElem">Service Modes</dt>
    {{#each restaurant.serviceModes}}
    <dd>{{this}}</dd>
    {{/each}}

    <dt class="restElem">Frequent Tags</dt>
    {{#each restaurant.frequentTags}}
    <dd>{{this}}</dd>
    {{/each}}

    <dt class="restElem">Menu</dt>
    <dd><a href="{{restaurant.menu}}">{{restaurant.menu}}</a></dd>

    <dt class="restElem">Hours</dt>
    <dd>To be Implemented</dd>

    <dt class="restElem">Featured Items</dt>
    <dd>To be implemented</dd>
</dl>

{{#unless authenticated}}
    <p class = "error">You must be logged in to post a review</p>
{{/unless}}

{{#if authenticated}}
    <p>Post a Review</p>
    <form id="reviewForm" action="/restaurant/{{restaurant._id}}/reviews" method="POST">
        <label>Title
            <input id="title" class="reviewForm" name="title" type="text" placeholder="Title">
        </label>
        <label>Rating
            <input id="rating" class="reviewForm" name="rating" type="number" placeholder="Rating">
        </label>
        <label>Review
            <input id="content" name="content" type="text" placeholder="Type in review">
        </label>
        <label>Tags
            <input id="tags" class="reviewForm" name="tags" type="text" placeholder="Type in review">
        </label>
        <input id="restaurantId" name="restaurantId" value="{{restaurant._id}}" hidden>
        <button type="submit">Post</button>
    </form>
    <p id="error"></p>
{{/if}}

<h2>Reviews</h2>
<div id="reviewList">
{{#each restaurant.reviews}}
    <div id="review">
        <a class = "centerthis" href="/users/{{user.username}}">{{user.username}}</a>
        <h1 class = "centerthis">{{title}}</h1>
        <p class = "centerthis">{{dateOfReview}}</p>
        <p class = "centerthis">Rating: {{rating}}</p>
        <p class = "centerthis">{{content}}</p>
        <dl class = "commlist">Comments</dl>
        {{#each comments}}
            <dt>{{this}}</dt>
            <dd>{{this}}</dd>
        {{/each}}
    </div>
{{/each}}
</div>

